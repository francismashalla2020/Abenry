<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        android:padding="2dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/relativeNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="2dp"
                android:padding="2dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageNews"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/mm" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/google_sans_bold"
                android:maxLines="2"
                android:padding="2dp"
                android:text="The impact of Mobile Apps"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/purple_500"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewTdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/google_sans_regular"
                android:maxLines="1"
                android:padding="2dp"
                android:text="The impact of Mobile Apps The impact of Mobile Apps The impact of Mobile AppsThe impact of Mobile Apps"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textPosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTdesc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/google_sans_regular"
                android:padding="5dp"
                android:text="Posted on:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/textViewpostdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTdesc"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/textPosted"
                android:background="@drawable/rounded_t"
                android:fontFamily="@font/google_sans_regular"
                android:maxLines="1"
                android:padding="3dp"
                android:text="11-04-2022"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTdesc"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textViewpostdDate"
                android:background="@drawable/rounded_green"
                android:fontFamily="@font/google_sans_regular"
                android:padding="3dp"
                android:text="Category"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textSize="11dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>