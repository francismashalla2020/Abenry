<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services"
    android:orientation="vertical"
    android:background="@color/purple_500"

    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_chevron_left_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="@string/title_practice"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serve"
            android:fontFamily="@font/google_sans_bold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serve_1"
            android:fontFamily="@font/google_sans_regular"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                >
                <ImageView
                    android:id="@+id/imageCorporate"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="buttonClicked"
                    app:srcCompat="@drawable/corps"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/circle"
                    />
                <ImageView
                    android:id="@+id/imageIp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="buttonClicked"
                    app:srcCompat="@drawable/ips"
                    android:background="@drawable/circle"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />
                <ImageView
                    android:id="@+id/imageLit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="buttonClicked"
                    app:srcCompat="@drawable/lits"
                    android:background="@drawable/circle"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                />
            <TextView
                android:id="@+id/tapConnect"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/invrounded"
                android:fontFamily="@font/google_sans_regular"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="@string/tap_connected"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whiterounded"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/corporateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                >
                <ImageView
                    android:id="@+id/imageCorps"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/corps"
                    android:tint="@color/purple_500"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="@string/service_one"
                    android:fontFamily="@font/google_sans_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/details"
                    android:tint="@color/purple_500"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/iplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                >
                <ImageView
                    android:id="@+id/imageIpn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ips"
                    android:tint="@color/purple_500"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="@string/service_three"
                    android:fontFamily="@font/google_sans_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/details"
                    android:tint="@color/purple_500"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/litlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                >
                <ImageView
                    android:id="@+id/imageLts"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/lits"
                    android:tint="@color/purple_500"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="@string/service_two"
                    android:fontFamily="@font/google_sans_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/details"
                    android:tint="@color/purple_500"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/quicklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/google_sans_bold"
                android:gravity="left"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:textSize="14dp"
                android:textColor="@color/purple_500"
                android:text="@string/get_connected"
                android:textAllCaps="true"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:fontFamily="@font/google_sans_bold"
                android:padding="8dp"
                android:textSize="14dp"
                android:textColor="@color/purple_500"
                android:background="@color/purple_500"
                android:textAllCaps="true"
                android:layout_marginLeft="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:id="@+id/buttonCall"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="buttonClicked"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_calling"
                    app:tint="@color/black"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/buttonEmail"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="buttonClicked"
                    app:srcCompat="@drawable/ic_email"
                    app:tint="@color/black"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/buttonLocation"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="buttonClicked"
                    app:srcCompat="@drawable/ic_location"
                    app:tint="@color/black"
                    android:layout_weight="1"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="4"
                    >
                </View>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/main_menu"
        />

</LinearLayout>